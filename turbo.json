{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PORT",
        "TUSKY_API_KEY",
        "TUSKY_VAULT_ID",
        "NEXT_PUBLIC_CDP_PROJECT_ID",
        "CDP_API_KEY_NAME",
        "CDP_API_KEY_PRIVATE_KEY",
        "POLYMARKET_PRIVATE_KEY",
        "POLYMARKET_FUNDER_ADDRESS"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "PORT",
        "TUSKY_API_KEY",
        "TUSKY_VAULT_ID",
        "NEXT_PUBLIC_CDP_PROJECT_ID",
        "CDP_API_KEY_NAME",
        "CDP_API_KEY_PRIVATE_KEY",
        "POLYMARKET_PRIVATE_KEY",
        "POLYMARKET_FUNDER_ADDRESS"
      ]
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
